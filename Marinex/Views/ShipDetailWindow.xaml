<Window x:Class="Marinex.Views.ShipDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ship Details" 
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E2E"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">
    
    <Window.Resources>
        <SolidColorBrush x:Key="TextPrimary" Color="#CDD6F4"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#A6ADC8"/>
        <SolidColorBrush x:Key="AccentColor" Color="#89B4FA"/>
        <SolidColorBrush x:Key="BgCard" Color="#313244"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#45475A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E2E" CornerRadius="0">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <Border Width="60" Height="60" CornerRadius="30" Background="#313244" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="ðŸš¢" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock x:Name="TxtShipNameHeader" 
                          Text="Ship Name" 
                          FontSize="22" 
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          TextAlignment="Center"/>
                <TextBlock x:Name="TxtShipType"
                          FontSize="13"
                          Foreground="{StaticResource TextSecondary}"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Content ScrollViewer -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <!-- Identification Section -->
                    <TextBlock Text="ðŸ“‹ Identification" Style="{StaticResource SectionHeader}"/>
                    <Border Background="{StaticResource BgCard}" CornerRadius="10" Padding="15">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="MMSI Number" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock x:Name="TxtMmsi" Style="{StaticResource ValueStyle}" Margin="0,0,0,10"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Ship Type" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock x:Name="TxtShipTypeDetail" Style="{StaticResource ValueStyle}" Margin="0,0,0,10"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Position Section -->
                    <TextBlock Text="ðŸ“ Position &amp; Navigation" Style="{StaticResource SectionHeader}"/>
                    <Border Background="{StaticResource BgCard}" CornerRadius="10" Padding="15">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Latitude" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock x:Name="TxtLatitude" Style="{StaticResource ValueStyle}" Margin="0,0,0,5"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Longitude" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock x:Name="TxtLongitude" Style="{StaticResource ValueStyle}" Margin="0,0,0,5"/>
                                </StackPanel>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Speed" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock x:Name="TxtSpeed" Style="{StaticResource ValueStyle}" Margin="0,0,0,5"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Course" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock x:Name="TxtCourse" Style="{StaticResource ValueStyle}" Margin="0,0,0,5"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Heading" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock x:Name="TxtHeading" Style="{StaticResource ValueStyle}" Margin="0,0,0,5"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Destination Section -->
                    <TextBlock Text="ðŸŽ¯ Destination" Style="{StaticResource SectionHeader}"/>
                    <Border Background="{StaticResource BgCard}" CornerRadius="10" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Destination Port" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="TxtDestination" 
                                      Style="{StaticResource ValueStyle}"
                                      TextWrapping="Wrap"
                                      Margin="0,0,0,5"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Status Section -->
                    <TextBlock Text="â±ï¸ Status" Style="{StaticResource SectionHeader}"/>
                    <Border Background="{StaticResource BgCard}" CornerRadius="10" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Last Updated" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="TxtLastUpdate" Style="{StaticResource ValueStyle}" Margin="0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                     <Button x:Name="BtnReportIncident"
                        Content="âš ï¸ Report"
                        Style="{StaticResource ModernButtonStyle}"
                        Background="#F38BA8"
                        Foreground="#1E1E2E"
                        Click="BtnReportIncident_Click"
                        Margin="0,0,10,0"/>

                    <Button x:Name="Btn3DView"
                        Content="ðŸ§Š 3D View"
                        Style="{StaticResource ModernButtonStyle}"
                        Background="#89B4FA"
                        Foreground="#1E1E2E"
                        Click="Btn3DView_Click"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnCopyCoordinates"
                        Content="ðŸ“‹ Copy"
                        Style="{StaticResource ModernButtonStyle}"
                        Background="#313244"
                        Foreground="{StaticResource TextPrimary}"
                        Click="BtnCopyCoordinates_Click"
                        Margin="0,0,10,0"/>
                    
                    <Button x:Name="BtnClose"
                        Content="Close"
                        Style="{StaticResource ModernButtonStyle}"
                        Background="Transparent"
                        Foreground="{StaticResource TextSecondary}"
                        Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>