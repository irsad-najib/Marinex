<UserControl x:Class="Marinex.Views.LandingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <!-- Feature Card Style (Local) -->
        <Style x:Key="FeatureCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="140"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#FFFFFF" Opacity="0.12"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- Hero Section (dari MainWindow) -->
    <Grid>
        <!-- Background Image with Overlay -->
        <Grid>
            <Image Source="pack://application:,,,/Assets/hero-bg.jpg" 
                   Stretch="UniformToFill" 
                   Opacity="0.3"/>
            <Rectangle Fill="#000000" Opacity="0.5"/>
        </Grid>

        <!-- Content -->
        <Grid Margin="60,80,60,60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Content -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <!-- Hero Title -->
                <TextBlock FontSize="56" 
                           FontWeight="Bold" 
                           Foreground="White"
                           LineHeight="65"
                           Margin="0,0,0,20">
                    <Run Text="Your Intelligent"/><LineBreak/>
                    <Run Text="Maritime Companion"/>
                </TextBlock>

                <!-- Subtitle -->
                <TextBlock Text="With MARINEX, experience the next generation of maritime intelligence â€” where navigation, maintenance, and environmental awareness unite in one seamless system."
                           FontSize="16"
                           Foreground="#DDDDDD"
                           TextWrapping="Wrap"
                           MaxWidth="550"
                           HorizontalAlignment="Left"
                           LineHeight="24"
                           Margin="0,0,0,30"/>

                <!-- Feature Cards -->
                <StackPanel Orientation="Horizontal" 
                            Margin="0,20,0,0">
                    <!-- Card 1 -->
                    <Border Style="{StaticResource FeatureCardStyle}" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="ðŸ“" FontSize="22" Margin="0,0,0,8"/>
                            <TextBlock Text="Stay on course with live GPS monitoring and dynamic route adjustments based on ocean conditions."
                                       TextWrapping="Wrap"
                                       Foreground="#CCCCCC"
                                       FontSize="11"
                                       LineHeight="15"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 2 -->
                    <Border Style="{StaticResource FeatureCardStyle}" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="âš™ï¸" FontSize="22" Margin="0,0,0,8"/>
                            <TextBlock Text="Detect potential engine issues before they happen through intelligent machine-learning diagnostics."
                                       TextWrapping="Wrap"
                                       Foreground="#CCCCCC"
                                       FontSize="11"
                                       LineHeight="15"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 3 -->
                    <Border Style="{StaticResource FeatureCardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ§­" FontSize="22" Margin="0,0,0,8"/>
                            <TextBlock Text="Explore your ship in an interactive 3D environment with real-time sensor indicators and data."
                                       TextWrapping="Wrap"
                                       Foreground="#CCCCCC"
                                       FontSize="11"
                                       LineHeight="15"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Right Content Removed -->
        </Grid>
    </Grid>
</UserControl>
