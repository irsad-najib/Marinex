<Window x:Class="Marinex.Views.ReportsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reports - Marinex" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1E3A8A" Padding="30,0">
            <Grid VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š Reports Dashboard" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock Text="View and manage all reports" 
                              FontSize="14" 
                              Foreground="#93C5FD" 
                              Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Content="âž• New Report" 
                       x:Name="btnNewReport"
                       Click="btnNewReport_Click"
                       HorizontalAlignment="Right"
                       Width="150" 
                       Height="45"
                       FontSize="15"
                       FontWeight="SemiBold"
                       Background="#FBBF24"
                       Foreground="#1E3A8A"
                       BorderThickness="0"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Reports List -->
            <Border Grid.Column="0" 
                   Background="White" 
                   CornerRadius="10" 
                   Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search & Filter -->
                    <Border Grid.Row="0" 
                           Background="#F9FAFB" 
                           BorderBrush="#E5E7EB" 
                           BorderThickness="0,0,0,1"
                           Padding="20">
                        <TextBox x:Name="txtSearch" 
                                Padding="10" 
                                FontSize="14"
                                TextChanged="txtSearch_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="#6B7280"/>
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="ðŸ” Search reports..." 
                                                                      Foreground="#9CA3AF" 
                                                                      FontSize="14" 
                                                                      Margin="10,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>

                    <!-- Filter Tabs -->
                    <StackPanel Grid.Row="1" 
                               Orientation="Horizontal" 
                               Background="White"
                               Margin="10">
                        <RadioButton x:Name="rbAll" 
                                    Content="All" 
                                    IsChecked="True"
                                    Checked="FilterChanged"
                                    Margin="10,5" 
                                    FontSize="13"/>
                        <RadioButton x:Name="rbPollution" 
                                    Content="ðŸ—‘ï¸ Pollution"
                                    Checked="FilterChanged"
                                    Margin="10,5" 
                                    FontSize="13"/>
                        <RadioButton x:Name="rbSafety" 
                                    Content="âš ï¸ Safety"
                                    Checked="FilterChanged"
                                    Margin="10,5" 
                                    FontSize="13"/>
                        <RadioButton x:Name="rbMaintenance" 
                                    Content="ðŸ”§ Maintenance"
                                    Checked="FilterChanged"
                                    Margin="10,5" 
                                    FontSize="13"/>
                    </StackPanel>

                    <!-- Reports ListView -->
                    <ListBox Grid.Row="2" 
                            x:Name="lstReports"
                            SelectionChanged="lstReports_SelectionChanged"
                            BorderThickness="0"
                            Background="Transparent"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15" 
                                       BorderBrush="#E5E7EB" 
                                       BorderThickness="0,0,0,1"
                                       Background="Transparent">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="15"
                                                  TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Summary}" 
                                                  FontSize="13" 
                                                  Foreground="#6B7280"
                                                  TextWrapping="Wrap"
                                                  Margin="0,5,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <Border Background="#DBEAFE" 
                                                   Padding="8,3" 
                                                   CornerRadius="3"
                                                   Margin="0,0,5,0">
                                                <TextBlock Text="{Binding Type}" 
                                                          FontSize="11" 
                                                          Foreground="#1E40AF"
                                                          FontWeight="SemiBold"/>
                                            </Border>
                                            <TextBlock Text="{Binding DateString}" 
                                                      FontSize="12" 
                                                      Foreground="#9CA3AF"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Report Detail -->
            <Border Grid.Column="2" 
                   Background="White" 
                   CornerRadius="10" 
                   Padding="30">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="pnlReportDetail">
                        <!-- Empty state -->
                        <StackPanel x:Name="pnlEmptyState" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"
                                   Margin="0,100,0,0">
                            <TextBlock Text="ðŸ“‹" 
                                      FontSize="80" 
                                      HorizontalAlignment="Center" 
                                      Foreground="#E5E7EB"/>
                            <TextBlock Text="Select a report to view details" 
                                      FontSize="18" 
                                      Foreground="#9CA3AF" 
                                      HorizontalAlignment="Center"
                                      Margin="0,20,0,0"/>
                        </StackPanel>

                        <!-- Report detail will be populated dynamically -->
                        <TextBlock x:Name="txtReportDetail" 
                                  FontFamily="Consolas"
                                  FontSize="13"
                                  TextWrapping="Wrap"
                                  Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
