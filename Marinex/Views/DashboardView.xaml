<UserControl x:Class="Marinex.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    
    <!-- Hero Section (dari MainWindow) -->
    <Grid>
        <!-- Background Image with Overlay -->
        <Grid>
            <Image Source="pack://application:,,,/Assets/hero-bg.jpg" 
                   Stretch="UniformToFill" 
                   Opacity="0.3"/>
            <Rectangle Fill="#000000" Opacity="0.5"/>
        </Grid>

        <!-- Content -->
        <Grid Margin="60,80,60,60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Content -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <!-- Hero Title -->
                <TextBlock FontSize="56" 
                           FontWeight="Bold" 
                           Foreground="White"
                           LineHeight="65"
                           Margin="0,0,0,20">
                    <Run Text="Your Intelligent"/><LineBreak/>
                    <Run Text="Maritime Companion"/>
                </TextBlock>

                <!-- Subtitle -->
                <TextBlock Text="With MARINEX, experience the next generation of maritime intelligence â€” where navigation, maintenance, and environmental awareness unite in one seamless system."
                           FontSize="16"
                           Foreground="#DDDDDD"
                           TextWrapping="Wrap"
                           MaxWidth="550"
                           HorizontalAlignment="Left"
                           LineHeight="24"
                           Margin="0,0,0,30"/>

                <!-- OOP Demonstration Section -->
                <Border Background="#2a2a2a" 
                        CornerRadius="10" 
                        Padding="20"
                        Margin="0,30,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ§¬ OOP Concepts Demonstration" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Demonstrasi Inheritance, Encapsulation, dan Polymorphism:" 
                                   FontSize="14" 
                                   Foreground="#CCCCCC" 
                                   Margin="0,0,0,10"/>
                        
                        <Button x:Name="btnDemonstrateOOP" 
                                Content="Jalankan Demonstrasi OOP" 
                                Click="BtnDemonstrateOOP_Click"
                                Background="#4a9eff"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                Padding="15,10"
                                BorderThickness="0"
                                CornerRadius="5"
                                Cursor="Hand"
                                Margin="0,0,0,15"/>
                        
                        <!-- Output Area -->
                        <ScrollViewer MaxHeight="400" 
                                      VerticalScrollBarVisibility="Auto"
                                      Background="#1a1a1a"
                                      BorderBrush="#4a4a4a"
                                      BorderThickness="1"
                                      Padding="15"
                                      CornerRadius="5">
                            <TextBlock x:Name="txtOOPOutput" 
                                       Foreground="#DDDDDD"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       Text="Klik tombol di atas untuk melihat demonstrasi OOP concepts..."/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Access Modifier Demonstration Section -->
                <Border Background="#2a2a2a" 
                        CornerRadius="10" 
                        Padding="20"
                        Margin="0,20,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ” Access Modifier Demonstration" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Demonstrasi Access Modifier: Private, Protected, Public, Internal" 
                                   FontSize="14" 
                                   Foreground="#CCCCCC" 
                                   Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button x:Name="btnDemonstrateProtected" 
                                    Content="Demonstrasi PROTECTED" 
                                    Click="BtnDemonstrateProtected_Click"
                                    Background="#ff6b6b"
                                    Foreground="White"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Padding="15,10"
                                    BorderThickness="0"
                                    CornerRadius="5"
                                    Cursor="Hand"
                                    Margin="0,0,10,0"/>
                            
                            <Button x:Name="btnDemonstrateInternal" 
                                    Content="Demonstrasi INTERNAL" 
                                    Click="BtnDemonstrateInternal_Click"
                                    Background="#51cf66"
                                    Foreground="White"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Padding="15,10"
                                    BorderThickness="0"
                                    CornerRadius="5"
                                    Cursor="Hand"/>
                        </StackPanel>
                        
                        <!-- Output Area for Access Modifier -->
                        <ScrollViewer MaxHeight="300" 
                                      VerticalScrollBarVisibility="Auto"
                                      Background="#1a1a1a"
                                      BorderBrush="#4a4a4a"
                                      BorderThickness="1"
                                      Padding="15"
                                      CornerRadius="5">
                            <TextBlock x:Name="txtAccessModifierOutput" 
                                       Foreground="#DDDDDD"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       Text="Klik tombol di atas untuk melihat demonstrasi Access Modifier..."/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Feature Cards -->
                <StackPanel Orientation="Horizontal" 
                            Margin="0,20,0,0">
                    <!-- Card 1 -->
                    <Border Style="{StaticResource FeatureCardStyle}" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="ðŸ“" FontSize="22" Margin="0,0,0,8"/>
                            <TextBlock Text="Stay on course with live GPS monitoring and dynamic route adjustments based on ocean conditions."
                                       TextWrapping="Wrap"
                                       Foreground="#CCCCCC"
                                       FontSize="11"
                                       LineHeight="15"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 2 -->
                    <Border Style="{StaticResource FeatureCardStyle}" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="âš™ï¸" FontSize="22" Margin="0,0,0,8"/>
                            <TextBlock Text="Detect potential engine issues before they happen through intelligent machine-learning diagnostics."
                                       TextWrapping="Wrap"
                                       Foreground="#CCCCCC"
                                       FontSize="11"
                                       LineHeight="15"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 3 -->
                    <Border Style="{StaticResource FeatureCardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ§­" FontSize="22" Margin="0,0,0,8"/>
                            <TextBlock Text="Explore your ship in an interactive 3D environment with real-time sensor indicators and data."
                                       TextWrapping="Wrap"
                                       Foreground="#CCCCCC"
                                       FontSize="11"
                                       LineHeight="15"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Right Content - Ship Visual Placeholder -->
            <Border Grid.Column="1" 
                    Background="#2a2a2a"
                    CornerRadius="15"
                    VerticalAlignment="Top"
                    Height="400"
                    Margin="40,0,0,0">
                <Viewbox Margin="40">
                    <TextBlock Text="ðŸš¢" FontSize="120" Foreground="#4a4a4a"/>
                </Viewbox>
            </Border>
        </Grid>
    </Grid>
</UserControl>
