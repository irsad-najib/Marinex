<Window x:Class="Marinex.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        mc:Ignorable="d"
        Title="Marinex - Live Ship Tracking Dashboard" 
        Height="800" Width="1400"
        WindowState="Maximized"
        Background="#1a1a1a">
    
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                           BlurRadius="10"
                           ShadowDepth="2"
                           Opacity="0.1"/>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusCard" TargetType="Border">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="DarkTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e0e0e0"/>
        </Style>
        
        <Style x:Key="ShipListItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#4a4a4a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition x:Name="MapRow" Height="*"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#0d47a1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸš¢" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="MARINEX DASHBOARD" 
                             FontSize="22" 
                             FontWeight="Bold" 
                             Foreground="White"
                             VerticalAlignment="Center"/>
                    <TextBlock x:Name="ConnectionStatus" 
                             Text="â— Connected" 
                             FontSize="14" 
                             Foreground="#4CAF50"
                             VerticalAlignment="Center"
                             Margin="20,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnToggleStream" 
                            Content="Stop Stream" 
                            Style="{StaticResource ModernButton}"
                            Background="#F44336"
                            Margin="0,0,10,0"
                            Click="BtnToggleStream_Click"/>
                    <Button x:Name="BtnLogout" 
                            Content="Logout" 
                            Style="{StaticResource ModernButton}"
                            Background="#757575"
                            Click="BtnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource StatusCard}">
                <StackPanel>
                    <TextBlock Text="Total Ships Tracked" 
                             FontSize="12" 
                             Foreground="#9e9e9e"
                             FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtTotalShips" 
                             Text="0" 
                             FontSize="32" 
                             FontWeight="Bold"
                             Foreground="#42A5F5"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource StatusCard}">
                <StackPanel>
                    <TextBlock Text="Messages Received" 
                             FontSize="12" 
                             Foreground="#9e9e9e"
                             FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtMessagesCount" 
                             Text="0" 
                             FontSize="32" 
                             FontWeight="Bold"
                             Foreground="#66BB6A"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource StatusCard}">
                <StackPanel>
                    <TextBlock Text="Active Connections" 
                             FontSize="12" 
                             Foreground="#9e9e9e"
                             FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtActiveConnections" 
                             Text="1" 
                             FontSize="32" 
                             FontWeight="Bold"
                             Foreground="#FFA726"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" Style="{StaticResource StatusCard}" Margin="0">
                <StackPanel>
                    <TextBlock Text="Last Update" 
                             FontSize="12" 
                             Foreground="#9e9e9e"
                             FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtLastUpdate" 
                             Text="--:--:--" 
                             FontSize="32" 
                             FontWeight="Bold"
                             Foreground="#AB47BC"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Map View -->
    <Border Grid.Row="2" 
        Grid.Column="1"
        x:Name="MapBorder"
        Background="#2a2a2a" 
        Margin="20,10,20,10"
        CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <gmap:GMapControl x:Name="MainMap" 
                                Margin="10"/>
                
            <!-- Map Controls Overlay -->
            <StackPanel VerticalAlignment="Top" 
                  HorizontalAlignment="Right" 
                  Margin="20">
                    <Border Background="#2a2a2a" 
                          CornerRadius="4" 
                          Padding="10"
                          Effect="{StaticResource DropShadowEffect}">
                        <StackPanel>
                            <TextBlock Text="Map Controls" 
                                     FontWeight="Bold" 
                                     FontSize="12"
                                     Foreground="#e0e0e0"
                                     Margin="0,0,0,10"/>
                            
                            <!-- Collapse Map Button (small version) -->
                            <Button x:Name="btnCollapseMap"
                                  Content="â–¼ Hide Map"
                                  Width="100"
                                  Height="28"
                                  Margin="0,0,0,5"
                                  ToolTip="Hide map view"
                                  Click="btnCollapseMap_Click"
                                  Background="#455A64"
                                  Foreground="#e0e0e0"
                                  BorderThickness="0"
                                  FontSize="11"
                                  Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                          CornerRadius="3"
                                                          Padding="5,3">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#546E7A"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button Content="Zoom In" 
                                  Click="BtnZoomIn_Click"
                                  Style="{StaticResource ModernButton}"
                                  Margin="0,0,0,5"/>
                            <Button Content="Zoom Out" 
                                  Click="BtnZoomOut_Click"
                                  Style="{StaticResource ModernButton}"
                                  Margin="0,0,0,5"/>
                            <Button Content="Reset View" 
                                  Click="BtnResetView_Click"
                                  Style="{StaticResource ModernButton}"
                                  Background="#FF9800"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Ship List -->
        <Border Grid.Row="3" 
                Grid.Column="1"
                Background="#2a2a2a" 
                Margin="20,10,20,20"
                CornerRadius="8"
                Padding="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Live Ship Stream" 
                         FontSize="16" 
                         FontWeight="Bold"
                         Foreground="#e0e0e0"
                         Margin="0,0,0,10"/>

                <!-- Filter Box -->
                <Border Grid.Row="1" 
                        Background="#3a3a3a" 
                        CornerRadius="4" 
                        Padding="10"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="ðŸ”" 
                                 FontSize="16" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        
                        <TextBox x:Name="TxtFilter" 
                               Grid.Column="1"
                               Background="Transparent"
                               Foreground="#e0e0e0"
                               BorderThickness="0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               TextChanged="TxtFilter_TextChanged"/>
                        
                        <TextBlock Grid.Column="1"
                                 x:Name="TxtFilterPlaceholder"
                                 Text="Filter ships by name..." 
                                 Foreground="#757575"
                                 VerticalAlignment="Center"
                                 IsHitTestVisible="False"
                                 FontSize="14"
                                 Margin="2,0,0,0"/>
                        
                        <Button Grid.Column="2" 
                              Content="Clear" 
                              Background="#f44336"
                              Foreground="White"
                              BorderThickness="0"
                              Padding="10,5"
                              Cursor="Hand"
                              Click="BtnClearFilter_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                      CornerRadius="3"
                                                      Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#d32f2f"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- Ship List -->
                <ListBox x:Name="ShipListBox" 
                       Grid.Row="2"
                       Background="Transparent"
                       BorderThickness="0"
                       ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                       SelectionChanged="ShipListBox_SelectionChanged"
                       MouseDoubleClick="ShipListBox_MouseDoubleClick">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource ShipListItem}"/>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="ðŸš¢" 
                                         FontSize="20" 
                                         VerticalAlignment="Center"
                                         Margin="0,0,15,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding ShipName}" 
                                             FontSize="16" 
                                             FontWeight="SemiBold"
                                             Foreground="#e0e0e0"/>
                                    <TextBlock FontSize="12" 
                                             Foreground="#9e9e9e"
                                             Margin="0,3,0,0">
                                        <Run Text="MMSI: "/>
                                        <Run Text="{Binding Mmsi}"/>
                                        <Run Text=" | Speed: "/>
                                        <Run Text="{Binding Speed, StringFormat={}{0:F1}}"/>
                                        <Run Text=" kn"/>
                                    </TextBlock>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="2" 
                                         Text="{Binding LastUpdate, StringFormat=HH:mm:ss}"
                                         FontSize="12"
                                         Foreground="#757575"
                                         VerticalAlignment="Center"
                                         Margin="0,0,10,0"/>
                                
                                <Button Grid.Column="3"
                                        Content="â„¹ï¸"
                                        Width="30" Height="30"
                                        Background="#2196F3"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Cursor="Hand"
                                        ToolTip="View ship details"
                                        Click="BtnShipDetails_Click"
                                        Tag="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="15"
                                                                Padding="5">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1976D2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Quick Actions Panel (Left Sidebar) -->
        <Border Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" 
                Background="#2a2a2a" 
                CornerRadius="8" 
                Margin="20,20,10,20"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Quick Actions" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="#e0e0e0"
                           Margin="0,0,0,20"/>
                
                <!-- Create Report Button -->
                <Button Name="btnCreateReport"
                        Content="ðŸ“ Create Report"
                        Height="55"
                        FontSize="14"
                        Margin="0,0,0,10"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnCreateReport_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="15,10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- View Reports Button -->
                <Button Name="btnViewReports"
                        Content="ðŸ“‹ View All Reports"
                        Height="55"
                        FontSize="14"
                        Margin="0,0,0,10"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnViewReports_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="15,10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#388E3C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Check Weather Button -->
                <Button Name="btnCheckWeather"
                        Content="ðŸŒ¦ï¸ Check Weather"
                        Height="55"
                        FontSize="14"
                        Margin="0,0,0,10"
                        Background="#FF9800"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnCheckWeather_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="15,10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F57C00"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Ship Tracking Info Button -->
                <Button Name="btnRegisterShip"
                        Content="ðŸš¢ Register Ship"
                        Height="55"
                        FontSize="14"
                        Margin="0,0,0,10"
                        Background="#9C27B0"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnRegisterShip_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="15,10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7B1FA2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Pollution Heatmap Toggle -->
                <Button Name="btnTogglePollution"
                        Content="ðŸ—‘ï¸ Show Pollution Heatmap"
                        Height="55"
                        FontSize="14"
                        Margin="0,0,0,10"
                        Background="#E91E63"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnTogglePollution_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="15,10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C2185B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    <!-- Restore Map Floating Button (visible when map collapsed) -->
    <Button x:Name="btnRestoreMap"
        Grid.Row="2"
        Grid.Column="1"
        Content="â–² Show Map"
        Width="120" Height="36"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="0,0,24,24"
        Visibility="Collapsed"
        ToolTip="Show map view"
        Click="btnRestoreMap_Click"
        Background="#2196F3"
        Foreground="White"
        BorderThickness="0"
        FontSize="12"
        FontWeight="SemiBold"
        Cursor="Hand">
        <Button.Style>
            <Style TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                  CornerRadius="18"
                                  Padding="15,8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.4" Color="#000000"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1976D2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Button.Style>
    </Button>
    </Grid>
</Window>
