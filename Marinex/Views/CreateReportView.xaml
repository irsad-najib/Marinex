<Window x:Class="Marinex.Views.CreateReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Report - Marinex" 
        Height="750" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2E"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="BgDark" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="BgCard" Color="#313244"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#CDD6F4"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#A6ADC8"/>
        <SolidColorBrush x:Key="AccentColor" Color="#89B4FA"/>
        <SolidColorBrush x:Key="InputBg" Color="#181825"/>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="{StaticResource InputBg}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="{StaticResource InputBg}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" 
                                        Template="{DynamicResource ComboBoxToggleButton}" 
                                        Grid.Column="2" 
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press"/>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False"  Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="10,0,23,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left" />
                            <TextBox x:Name="PART_EditableTextBox"
                                    Style="{x:Null}" 
                                    Template="{DynamicResource ComboBoxTextBox}" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Center" 
                                    Margin="3,3,23,3"
                                    Focusable="True" 
                                    Background="{StaticResource InputBg}"
                                    Foreground="White"
                                    Visibility="Hidden"
                                    IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" 
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"                
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="{StaticResource BgCard}"
                                            BorderThickness="1"
                                            BorderBrush="#45475A"
                                            CornerRadius="6"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" 
                        Grid.ColumnSpan="2"
                        CornerRadius="6"
                        Background="{StaticResource InputBg}"
                        BorderBrush="#45475A"
                        BorderThickness="1" />
                <Path x:Name="Arrow" 
                      Grid.Column="1" 
                      Fill="{StaticResource TextSecondary}"
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"
                      Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z" />
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="{TemplateBinding Background}" />
        </ControlTemplate>

        <Style x:Key="TabButtonStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="Transparent" 
                                Padding="20,12" 
                                Margin="0,0,5,0"
                                CornerRadius="8,8,0,0"
                                BorderBrush="Transparent"
                                BorderThickness="0,0,0,2">
                            <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"
                                            RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#313244"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource BgCard}" Padding="30,20" BorderBrush="#45475A" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="ðŸ“ Create New Report" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Select report type and fill in the details" 
                          FontSize="13" 
                          Foreground="{StaticResource TextSecondary}" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" 
                   Margin="30"
                   BorderThickness="0"
                   Background="Transparent">
            
            <!-- Pollution Report Tab -->
            <TabItem Header="ðŸ—‘ï¸ Pollution Report" Style="{StaticResource TabButtonStyle}">
                <Border Background="{StaticResource BgCard}" CornerRadius="0,10,10,10" Padding="30">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                            <TextBlock Text="Report Pollution/Waste at Sea" Style="{StaticResource SectionHeader}"/>

                        <!-- Location -->
                            <TextBlock Text="Location Name" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtPollutionLocation" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                        <!-- Coordinates -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                    <TextBlock Text="Latitude" Style="{StaticResource InputLabel}"/>
                                    <TextBox x:Name="txtPollutionLatitude" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                    <TextBlock Text="Longitude" Style="{StaticResource InputLabel}"/>
                                    <TextBox x:Name="txtPollutionLongitude" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Waste Type -->
                            <TextBlock Text="Waste Type" Style="{StaticResource InputLabel}"/>
                            <ComboBox x:Name="cmbWasteType" Style="{StaticResource ModernComboBox}" Margin="0,0,0,15">
                            <ComboBoxItem Content="Plastic Waste"/>
                            <ComboBoxItem Content="Oil Spill"/>
                            <ComboBoxItem Content="Chemical Waste"/>
                            <ComboBoxItem Content="Marine Debris"/>
                            <ComboBoxItem Content="Industrial Waste"/>
                            <ComboBoxItem Content="Other"/>
                        </ComboBox>

                        <!-- Quantity & Severity -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                    <TextBlock Text="Quantity Estimate" Style="{StaticResource InputLabel}"/>
                                    <ComboBox x:Name="cmbQuantity" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Small"/>
                                    <ComboBoxItem Content="Medium"/>
                                    <ComboBoxItem Content="Large"/>
                                    <ComboBoxItem Content="Massive"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                    <TextBlock Text="Severity Level" Style="{StaticResource InputLabel}"/>
                                    <ComboBox x:Name="cmbSeverity" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="Medium"/>
                                    <ComboBoxItem Content="High"/>
                                    <ComboBoxItem Content="Critical"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Description -->
                            <TextBlock Text="Description" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtPollutionDescription" 
                                    Style="{StaticResource ModernTextBox}"
                                Height="100" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,0,0,15"/>

                        <!-- Environmental Impact -->
                            <TextBlock Text="Environmental Impact (Optional)" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtEnvironmentalImpact" 
                                    Style="{StaticResource ModernTextBox}"
                                Height="80" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                Margin="0,0,0,20"/>
                    </StackPanel>
                </ScrollViewer>
                </Border>
            </TabItem>

            <!-- Safety Report Tab -->
            <TabItem Header="âš ï¸ Safety Report" Style="{StaticResource TabButtonStyle}">
                <Border Background="{StaticResource BgCard}" CornerRadius="0,10,10,10" Padding="30">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                            <TextBlock Text="Report Safety Incident" Style="{StaticResource SectionHeader}"/>

                        <!-- Location -->
                            <TextBlock Text="Location Name" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtSafetyLocation" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                        <!-- Incident Type -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                    <TextBlock Text="Incident Type" Style="{StaticResource InputLabel}"/>
                                    <ComboBox x:Name="cmbIncidentType" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Man Overboard"/>
                                    <ComboBoxItem Content="Fire"/>
                                    <ComboBoxItem Content="Collision"/>
                                    <ComboBoxItem Content="Grounding"/>
                                    <ComboBoxItem Content="Equipment Failure"/>
                                    <ComboBoxItem Content="Medical Emergency"/>
                                    <ComboBoxItem Content="Near Miss"/>
                                    <ComboBoxItem Content="Other"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                    <TextBlock Text="Target Ship" Style="{StaticResource InputLabel}"/>
                                    <TextBox x:Name="cmbSafetyTargetShip" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Severity & Casualties -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                    <TextBlock Text="Severity" Style="{StaticResource InputLabel}"/>
                                    <ComboBox x:Name="cmbSafetySeverity" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Minor"/>
                                    <ComboBoxItem Content="Moderate"/>
                                    <ComboBoxItem Content="Major"/>
                                    <ComboBoxItem Content="Critical"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                    <TextBlock Text="Casualties" Style="{StaticResource InputLabel}"/>
                                    <TextBox x:Name="txtCasualties" Style="{StaticResource ModernTextBox}" Text="0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Incident Details -->
                            <TextBlock Text="Incident Details" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtIncidentDetails" 
                                    Style="{StaticResource ModernTextBox}"
                                Height="120" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,0,0,15"/>

                        <!-- Action Taken -->
                            <TextBlock Text="Action Taken" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtSafetyAction" 
                                    Style="{StaticResource ModernTextBox}"
                                Height="80" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                Margin="0,0,0,20"/>
                    </StackPanel>
                </ScrollViewer>
                </Border>
            </TabItem>

            <!-- Maintenance Report Tab -->
            <TabItem Header="ðŸ”§ Maintenance Report" Style="{StaticResource TabButtonStyle}">
                <Border Background="{StaticResource BgCard}" CornerRadius="0,10,10,10" Padding="30">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                            <TextBlock Text="Report Maintenance Activity" Style="{StaticResource SectionHeader}"/>

                        <!-- Location -->
                            <TextBlock Text="Location Name" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtMaintenanceLocation" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                        <!-- Equipment & Task Type -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                    <TextBlock Text="Equipment Name" Style="{StaticResource InputLabel}"/>
                                    <TextBox x:Name="txtEquipmentName" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                    <TextBlock Text="Target Ship" Style="{StaticResource InputLabel}"/>
                                    <TextBox x:Name="cmbTargetShip" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                    <TextBlock Text="Task Type" Style="{StaticResource InputLabel}"/>
                                    <ComboBox x:Name="cmbTaskType" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Routine Inspection"/>
                                    <ComboBoxItem Content="Preventive Maintenance"/>
                                    <ComboBoxItem Content="Corrective Maintenance"/>
                                    <ComboBoxItem Content="Emergency Repair"/>
                                    <ComboBoxItem Content="Overhaul"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Priority & Status -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                    <TextBlock Text="Priority" Style="{StaticResource InputLabel}"/>
                                    <ComboBox x:Name="cmbPriority" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="Medium"/>
                                    <ComboBoxItem Content="High"/>
                                    <ComboBoxItem Content="Urgent"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                    <TextBlock Text="Status" Style="{StaticResource InputLabel}"/>
                                    <ComboBox x:Name="cmbMaintenanceStatus" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Scheduled"/>
                                    <ComboBoxItem Content="In Progress"/>
                                    <ComboBoxItem Content="Completed"/>
                                    <ComboBoxItem Content="Delayed"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Description -->
                            <TextBlock Text="Task Description" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtMaintenanceDescription" 
                                    Style="{StaticResource ModernTextBox}"
                                Height="100" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,0,0,15"/>

                        <!-- Findings -->
                            <TextBlock Text="Findings (Optional)" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtFindings" 
                                    Style="{StaticResource ModernTextBox}"
                                Height="80" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                Margin="0,0,0,20"/>
                    </StackPanel>
                </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" 
                Background="{StaticResource BgCard}" 
                BorderBrush="#45475A" 
                BorderThickness="0,1,0,0"
                Padding="30,20">
            <Grid VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Cancel" 
                           x:Name="btnCancel"
                           Click="btnCancel_Click"
                           Width="100" 
                           Height="40"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Background="Transparent"
                           Foreground="{StaticResource TextSecondary}"
                           BorderThickness="0"
                           Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ’¾ Save Draft" 
                           x:Name="btnSaveDraft"
                           Click="btnSaveDraft_Click"
                           Width="130" 
                           Height="40"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Background="#45475A"
                           Foreground="White"
                           BorderThickness="0"
                           Margin="0,0,10,0"
                           Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button Content="âœ… Submit Report" 
                           x:Name="btnSubmit"
                           Click="btnSubmit_Click"
                           Width="160" 
                           Height="40"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Background="{StaticResource AccentColor}"
                           Foreground="#1E1E2E"
                           BorderThickness="0"
                           Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>