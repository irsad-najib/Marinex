<Window x:Class="Marinex.Views.CreateReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Report - Marinex" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1E3A8A" Padding="30,0">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="ðŸ“‹ Create New Report" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Select report type and fill in the details" 
                          FontSize="14" 
                          Foreground="#93C5FD" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Tab Control for Report Types -->
        <TabControl Grid.Row="1" 
                   Margin="30,20,30,0"
                   BorderThickness="0"
                   Background="Transparent">
            
            <!-- Pollution Report Tab -->
            <TabItem Header="ðŸ—‘ï¸ Pollution Report" FontSize="16" FontWeight="SemiBold">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Report Pollution/Waste at Sea" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#1E3A8A" 
                                  Margin="0,0,0,20"/>

                        <!-- Location -->
                        <TextBlock Text="Location Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPollutionLocation" 
                                Padding="10" 
                                FontSize="14" 
                                Margin="0,0,0,15"/>

                        <!-- Coordinates -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Latitude" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtPollutionLatitude" Padding="10" FontSize="14"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Longitude" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtPollutionLongitude" Padding="10" FontSize="14"/>
                            </StackPanel>
                        </Grid>

                        <!-- Waste Type -->
                        <TextBlock Text="Waste Type" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbWasteType" 
                                 Padding="10" 
                                 FontSize="14" 
                                 Margin="0,0,0,15">
                            <ComboBoxItem Content="Plastic Waste"/>
                            <ComboBoxItem Content="Oil Spill"/>
                            <ComboBoxItem Content="Chemical Waste"/>
                            <ComboBoxItem Content="Marine Debris"/>
                            <ComboBoxItem Content="Industrial Waste"/>
                            <ComboBoxItem Content="Other"/>
                        </ComboBox>

                        <!-- Quantity & Severity -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Quantity Estimate" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbQuantity" Padding="10" FontSize="14">
                                    <ComboBoxItem Content="Small"/>
                                    <ComboBoxItem Content="Medium"/>
                                    <ComboBoxItem Content="Large"/>
                                    <ComboBoxItem Content="Massive"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Severity Level" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbSeverity" Padding="10" FontSize="14">
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="Medium"/>
                                    <ComboBoxItem Content="High"/>
                                    <ComboBoxItem Content="Critical"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Description -->
                        <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPollutionDescription" 
                                Padding="10" 
                                FontSize="14" 
                                Height="100" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,0,0,15"/>

                        <!-- Environmental Impact -->
                        <TextBlock Text="Environmental Impact (Optional)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtEnvironmentalImpact" 
                                Padding="10" 
                                FontSize="14" 
                                Height="80" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                Margin="0,0,0,20"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Safety Report Tab -->
            <TabItem Header="âš ï¸ Safety Report" FontSize="16" FontWeight="SemiBold">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Report Safety Incident" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#1E3A8A" 
                                  Margin="0,0,0,20"/>

                        <!-- Location -->
                        <TextBlock Text="Location Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtSafetyLocation" 
                                Padding="10" 
                                FontSize="14" 
                                Margin="0,0,0,15"/>

                        <!-- Incident Type -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Incident Type" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbIncidentType" Padding="10" FontSize="14">
                                    <ComboBoxItem Content="Man Overboard"/>
                                    <ComboBoxItem Content="Fire"/>
                                    <ComboBoxItem Content="Collision"/>
                                    <ComboBoxItem Content="Grounding"/>
                                    <ComboBoxItem Content="Equipment Failure"/>
                                    <ComboBoxItem Content="Medical Emergency"/>
                                    <ComboBoxItem Content="Near Miss"/>
                                    <ComboBoxItem Content="Other"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Target Ship" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="cmbSafetyTargetShip" Padding="10" FontSize="14"/>
                            </StackPanel>
                        </Grid>

                        <!-- Severity & Casualties -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Severity" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbSafetySeverity" Padding="10" FontSize="14">
                                    <ComboBoxItem Content="Minor"/>
                                    <ComboBoxItem Content="Moderate"/>
                                    <ComboBoxItem Content="Major"/>
                                    <ComboBoxItem Content="Critical"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Casualties" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtCasualties" Padding="10" FontSize="14" Text="0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Incident Details -->
                        <TextBlock Text="Incident Details" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtIncidentDetails" 
                                Padding="10" 
                                FontSize="14" 
                                Height="120" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,0,0,15"/>

                        <!-- Action Taken -->
                        <TextBlock Text="Action Taken" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtSafetyAction" 
                                Padding="10" 
                                FontSize="14" 
                                Height="80" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                Margin="0,0,0,20"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Maintenance Report Tab -->
            <TabItem Header="ðŸ”§ Maintenance Report" FontSize="16" FontWeight="SemiBold">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Report Maintenance Activity" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#1E3A8A" 
                                  Margin="0,0,0,20"/>

                        <!-- Location -->
                        <TextBlock Text="Location Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMaintenanceLocation" 
                                Padding="10" 
                                FontSize="14" 
                                Margin="0,0,0,15"/>

                        <!-- Equipment & Task Type -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Equipment Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtEquipmentName" Padding="10" FontSize="14"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Target Ship" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="cmbTargetShip" Padding="10" FontSize="14"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Task Type" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbTaskType" Padding="10" FontSize="14">
                                    <ComboBoxItem Content="Routine Inspection"/>
                                    <ComboBoxItem Content="Preventive Maintenance"/>
                                    <ComboBoxItem Content="Corrective Maintenance"/>
                                    <ComboBoxItem Content="Emergency Repair"/>
                                    <ComboBoxItem Content="Overhaul"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Priority & Status -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Priority" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbPriority" Padding="10" FontSize="14">
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="Medium"/>
                                    <ComboBoxItem Content="High"/>
                                    <ComboBoxItem Content="Urgent"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Status" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbMaintenanceStatus" Padding="10" FontSize="14">
                                    <ComboBoxItem Content="Scheduled"/>
                                    <ComboBoxItem Content="In Progress"/>
                                    <ComboBoxItem Content="Completed"/>
                                    <ComboBoxItem Content="Delayed"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Description -->
                        <TextBlock Text="Task Description" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMaintenanceDescription" 
                                Padding="10" 
                                FontSize="14" 
                                Height="100" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,0,0,15"/>

                        <!-- Findings -->
                        <TextBlock Text="Findings (Optional)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtFindings" 
                                Padding="10" 
                                FontSize="14" 
                                Height="80" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                Margin="0,0,0,20"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E5E7EB" 
                BorderThickness="0,1,0,0"
                Padding="30,0">
            <Grid VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="âŒ Cancel" 
                           x:Name="btnCancel"
                           Click="btnCancel_Click"
                           Width="120" 
                           Height="40"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Background="#F3F4F6"
                           Foreground="#374151"
                           BorderThickness="0"
                           Cursor="Hand"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ’¾ Save as Draft" 
                           x:Name="btnSaveDraft"
                           Click="btnSaveDraft_Click"
                           Width="140" 
                           Height="40"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Background="#EFF6FF"
                           Foreground="#1E40AF"
                           BorderThickness="0"
                           Margin="0,0,10,0"
                           Cursor="Hand"/>
                    
                    <Button Content="âœ… Submit Report" 
                           x:Name="btnSubmit"
                           Click="btnSubmit_Click"
                           Width="150" 
                           Height="40"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Background="#1E3A8A"
                           Foreground="White"
                           BorderThickness="0"
                           Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
