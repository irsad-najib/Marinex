<Window x:Class="Marinex.Views.WeatherView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather Information - Marinex" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1E3A8A" Padding="30,0">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="ðŸŒ¤ï¸ Weather Information" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Check weather conditions at any coordinates" 
                          FontSize="14" 
                          Foreground="#93C5FD" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Search Section -->
        <Border Grid.Row="1" 
               Background="White" 
               Margin="30,20,30,0"
               Padding="25"
               CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Latitude" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtLatitude" 
                            Padding="12" 
                            FontSize="14"
                            Text="0"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Longitude" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtLongitude" 
                            Padding="12" 
                            FontSize="14"
                            Text="0"/>
                </StackPanel>

                <Button Grid.Column="4" 
                       Content="ðŸ” Check Weather"
                       x:Name="btnCheckWeather"
                       Click="btnCheckWeather_Click"
                       Width="160" 
                       Height="40"
                       VerticalAlignment="Bottom"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Background="#1E3A8A"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Weather Display -->
        <ScrollViewer Grid.Row="2" 
                     VerticalScrollBarVisibility="Auto"
                     Margin="30,20">
            <StackPanel>
                <!-- Current Weather Card -->
                <Border x:Name="pnlWeatherInfo"
                       Background="White" 
                       CornerRadius="10" 
                       Padding="30"
                       Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Main Weather Info -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Current Weather" 
                                      FontSize="24" 
                                      FontWeight="Bold" 
                                      Foreground="#1E3A8A"
                                      Margin="0,0,0,20"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock x:Name="txtWeatherIcon" 
                                          Text="ðŸŒ¤ï¸" 
                                          FontSize="80"/>
                                <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="txtTemperature" 
                                              Text="25Â°C" 
                                              FontSize="48" 
                                              FontWeight="Bold"/>
                                    <TextBlock x:Name="txtCondition" 
                                              Text="Partly Cloudy" 
                                              FontSize="18" 
                                              Foreground="#6B7280"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Margin="0,20,0,0">
                                <TextBlock x:Name="txtLocation" 
                                          Text="Location: Pacific Ocean" 
                                          FontSize="16" 
                                          Foreground="#374151"
                                          Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtCoordinates" 
                                          Text="35.6892Â°N, 139.6917Â°E" 
                                          FontSize="14" 
                                          Foreground="#6B7280"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Right: Weather Details -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Details" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="#1E3A8A"
                                      Margin="0,0,0,20"/>

                            <!-- Wind -->
                            <Border Background="#F9FAFB" 
                                   Padding="15" 
                                   CornerRadius="8"
                                   Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ðŸ’¨ " FontSize="24" VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Wind" 
                                                  FontSize="13" 
                                                  Foreground="#6B7280"/>
                                        <TextBlock x:Name="txtWind" 
                                                  Text="15 knots NE" 
                                                  FontSize="16" 
                                                  FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Visibility -->
                            <Border Background="#F9FAFB" 
                                   Padding="15" 
                                   CornerRadius="8"
                                   Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ðŸ‘ï¸ " FontSize="24" VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Visibility" 
                                                  FontSize="13" 
                                                  Foreground="#6B7280"/>
                                        <TextBlock x:Name="txtVisibility" 
                                                  Text="10 km" 
                                                  FontSize="16" 
                                                  FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Wave Height -->
                            <Border Background="#F9FAFB" 
                                   Padding="15" 
                                   CornerRadius="8"
                                   Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ðŸŒŠ " FontSize="24" VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Wave Height" 
                                                  FontSize="13" 
                                                  Foreground="#6B7280"/>
                                        <TextBlock x:Name="txtWaveHeight" 
                                                  Text="2.5 meters" 
                                                  FontSize="16" 
                                                  FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Sea State -->
                            <Border Background="#F9FAFB" 
                                   Padding="15" 
                                   CornerRadius="8"
                                   Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="âš“ " FontSize="24" VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Sea State" 
                                                  FontSize="13" 
                                                  Foreground="#6B7280"/>
                                        <TextBlock x:Name="txtSeaState" 
                                                  Text="Moderate" 
                                                  FontSize="16" 
                                                  FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Pressure -->
                            <Border Background="#F9FAFB" 
                                   Padding="15" 
                                   CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ðŸŒ¡ï¸ " FontSize="24" VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Pressure" 
                                                  FontSize="13" 
                                                  Foreground="#6B7280"/>
                                        <TextBlock x:Name="txtPressure" 
                                                  Text="1013 hPa" 
                                                  FontSize="16" 
                                                  FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Empty State -->
                <Border x:Name="pnlEmptyState"
                       Background="White" 
                       CornerRadius="10" 
                       Padding="60"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸŒ" 
                                  FontSize="80" 
                                  HorizontalAlignment="Center" 
                                  Foreground="#E5E7EB"/>
                        <TextBlock Text="Enter coordinates to check weather" 
                                  FontSize="18" 
                                  Foreground="#9CA3AF" 
                                  HorizontalAlignment="Center"
                                  Margin="0,20,0,0"/>
                        <TextBlock Text="Weather data provided by OpenWeatherMap API" 
                                  FontSize="13" 
                                  Foreground="#D1D5DB" 
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
