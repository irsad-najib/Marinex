<Window x:Class="Marinex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marinex"
        mc:Ignorable="d"
        Title="Marinex - Your Intelligent Maritime Companion" 
        Height="900" Width="1400"
        WindowState="Maximized"
        Background="#1a1a1a">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <Grid x:Name="NavBar" Grid.Row="0" Background="#2a2a2a" Height="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <TextBlock Grid.Column="0" 
                       Text="Marinex." 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="40,0,0,0"
                       Cursor="Hand"
                       MouseDown="Logo_Click"/>

            <!-- Navigation Menu -->
            <StackPanel x:Name="NavMenu" Grid.Column="2" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center"
                        Margin="0,0,40,0">
                <Button Content="Landing" Style="{StaticResource NavButtonStyle}" Click="Landing_Click"/>
                <Button Content="Ships" Style="{StaticResource NavButtonStyle}" Click="Ships_Click"/>
                <Button Content="Voyages" Style="{StaticResource NavButtonStyle}" Click="Voyages_Click"/>
                <Button Content="Maintenance" Style="{StaticResource NavButtonStyle}" Click="Maintenance_Click"/>
                <Button x:Name="btnAuth" Content="Sign In" Style="{StaticResource NavButtonStyle}" Click="Auth_Click"/>
            </StackPanel>
        </Grid>

        <!-- Content Area (Single Page Application style) -->
        <ContentControl x:Name="ContentArea" Grid.Row="1" Background="#1a1a1a"/>
    </Grid>
</Window>
